@inject IDbContextFactory<ApplicationDbContext> DbFactory

@implements IDisposable

@rendermode @(new InteractiveServerRenderMode(false))
@attribute [StreamRendering]

<Toasts class="p-3" Style="margin-top: 80px;" Messages="ToastMessages" AutoHide="true" Delay="5000" Placement="ToastsPlacement.TopRight" />

@if (employees is null)
{
	<UserMessage Color="AlertColor.Secondary" Type="MessageType.Loading" />
}
else 
{
	<Grid TItem="Employee"
		  Class="table table-hover table-striped table-sm"
		  DataProvider="EmployeesDataProvider"
		  AllowFiltering="true"
		  Responsive="true"
		  AllowRowClick="true"
		  OnRowDoubleClick="(args) => OnInfoModal.InvokeAsync(args.Item)"
		  FiltersRowCssClass="bg-secondary bg-opacity-25 border-bottom-0"
		  HeaderRowCssClass="">

		<GridColumns>
			<GridColumn TItem="Employee" HeaderText="Fullname" PropertyName="FullName" FilterTextboxWidth="100">
				<Button Class="border-0" @onclick="() => OnInfoModal.InvokeAsync(context)" Outline=true Size=ButtonSize.Small Color="ButtonColor.Primary" TooltipTitle="Info"><i class="bi bi-info-circle-fill"></i></Button>
				@context.FullName
			</GridColumn>
			<GridColumn TItem="Employee" HeaderText="Phone Number" PropertyName="PhoneNumber" FilterTextboxWidth="100">
				@context.PhoneNumber
			</GridColumn>
			<GridColumn TItem="Employee" HeaderText="Email" PropertyName="Email" FilterTextboxWidth="100">
				@context.Email
			</GridColumn>
			<GridColumn TItem="Employee" HeaderText="" Filterable=false Class="text-center">
				<HeaderContent>
					<Button @onclick="() => RefreshData(true)" Color="ButtonColor.Info" Outline="true">
						<Icon Name="IconName.ArrowClockwise" class="me-1"></Icon>
						Refresh
					</Button>
				</HeaderContent>
				<ChildContent>
					@if(ShowTrashed)
					{
						<AuthorizeView Roles="Manager, Admin" Context="auth">
							<Button @onclick="() => OnRestoreModal.InvokeAsync(context)" Color="ButtonColor.Success" TooltipTitle="Restore"><i class="bi bi-arrow-counterclockwise"></i></Button>
						</AuthorizeView>
						<AuthorizeView Roles="Admin" Context="auth">
							<Button @onclick="() => OnDeleteModal.InvokeAsync(context)" Color="ButtonColor.Danger" TooltipTitle="Delete"><i class="bi bi-file-earmark-x"></i></Button>
						</AuthorizeView>
					}
					else
					{
						<AuthorizeView Roles="Manager, Admin" Context="auth">
							<Button @onclick="() => OnEditModal.InvokeAsync(context)" Color="ButtonColor.Info" TooltipTitle="Edit"><i class="bi bi-pencil-square"></i></Button>
						</AuthorizeView>
						<AuthorizeView Roles="Admin" Context="auth">
							<Button @onclick="() => OnRemoveModal.InvokeAsync(context)" Color="ButtonColor.Danger" TooltipTitle="Trash"><i class="bi bi-trash"></i></Button>
						</AuthorizeView>
					}
				</ChildContent>
			</GridColumn>
		</GridColumns>

	</Grid>
}

@code {
	[Parameter]
	public EventCallback<Employee> OnEditModal { get; set; }

	[Parameter]
	public EventCallback<Employee> OnRemoveModal { get; set; }

	[Parameter]
	public EventCallback<Employee> OnInfoModal { get; set; }

	[Parameter]
	public EventCallback<Employee> OnDeleteModal { get; set; }

	[Parameter]
	public EventCallback<Employee> OnRestoreModal { get; set; }

	[Parameter]
	public bool ShowTrashed { get; set; } = false;

	private ApplicationDbContext Context = default!;

	private List<Employee>? employees { get; set; } = null;

	private List<ToastMessage> ToastMessages = new();

	private async Task<GridDataProviderResult<Employee>> EmployeesDataProvider(GridDataProviderRequest<Employee> request)
	{
		if (employees is null)
			await LoadData();

		return await Task.FromResult(request.ApplyTo(employees!));
	}

	protected override async Task OnInitializedAsync()
	{
		await LoadData();
	}

	private async Task LoadData()
	{
		try
		{
			Context = DbFactory.CreateDbContext();

			if (ShowTrashed)
			{
				employees = await Context.Employees.Where(e => e.Deleted != null).ToListAsync();
			}
			else
			{
				employees = await Context.Employees.Where(e => e.Deleted == null).ToListAsync();
			}

			Context.Dispose();
		}
		catch (Exception ex)
		{
			ToastMessages.Add(new()
			{
					Type = ToastType.Danger,
					IconName = IconName.ExclamationOctagonFill,
					Content =@<div>
					<Icon Name="IconName.ExclamationOctagonFill" class="me-2"></Icon>
					ERROR
					<br />
				@ex.Message
				</div>
			});
			Console.ForegroundColor = ConsoleColor.DarkRed;
			Console.WriteLine("ERROR -> Unable to load Employees.");
			Console.WriteLine("\t" + ex.ToString());
			Console.ForegroundColor = ConsoleColor.White;
		}
		finally
		{
			await Context.DisposeAsync();
		}
	}

	public void Dispose()
	{
		Context?.Dispose();
	}

	public async Task RefreshData(bool showToast)
	{
		employees = null;
		await LoadData();

		if (showToast)
			ToastMessages.Add(new()
				{
					Type = ToastType.Info,
					IconName = IconName.ArrowClockwise,
					Content =@<div class="text-white">
							<Icon Name="IconName.ArrowClockwise" class="me-2"></Icon>
							Employees Refreshed!
						   </div>
				}
			);
	}
}
